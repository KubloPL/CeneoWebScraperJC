{% extends "base.html.jinja" %}

{% block content %}
<p>To jest strona ekstrakcji opinii.</p>
<form action="{{url_for('extract')}}" method="POST" class="container">
  <div class="row g-3 align-items-center">
  <div class="col-auto">
    <label for="product_id" class="cor-form-laber">Kod produktu</label>
  </div>
  <div class="col-auto">
    <input type="text" name="product_id" id="product_id" class="form-control" aria-describedby="product_idHelpInLine" placeholder="Podaj kod produktu" required>
  </div>
    <div class="col-auto">
        <span id="product_idHelpInLine" class="form-text">
        Kod produktu musi zawieraÄ‡ 5-10 cyfr.
        </span>
    </div>
      <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-3">Pobierz opinie</button>
      </div>
</form>
{% if error is defined %}
        <div class = "alert alert-warning alert-dismissable fade show" role="alert">
            <strong>Uwaga!</strong> {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %} 
{% endblock %}